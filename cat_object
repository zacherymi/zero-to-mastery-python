class Cat: 
    species = 'mammal'
    def __init__(self, name, age):
        self.name = name
        self.age = age
    
cudi = Cat('Cudi', 5)
ramone = Cat('Ramone', 7)
tom = Cat('Tom', 10)

#Getting the oldest cat
def get_oldest_cat(*args):
    return max(args)

print(f'The oldest cat is {get_oldest_cat(cudi.age, ramone.age,tom.age)} years old')

